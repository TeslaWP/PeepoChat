<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/msg_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/Primary"
        android:fontFamily="@font/poppins"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis in dapibus dolor. Pellentesque a felis dignissim, porttitor risus id, condimentum est. Morbi malesuada risus justo, vel finibus elit aliquet vel."
        android:textColor="@color/Text"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/pfp_to"
        app:layout_constraintTop_toTopOf="@+id/pfp_to" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pfp_to"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star" />

</androidx.constraintlayout.widget.ConstraintLayout>